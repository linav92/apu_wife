<%= form_with(model: breastfeeding, local: true) do |form| %>
  <% if breastfeeding.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(breastfeeding.errors.count, "error") %> prohibited this breastfeeding from being saved:</h2>

      <ul>
        <% breastfeeding.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :cantidad %> / Gramos
    <%= form.number_field :cantidad, class: 'form-control'%>
  </div>

  <div class="form-group">
    <%= form.label :duracion %> / Minutos
    <%= form.number_field :duracion, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :fecha %>
    <%= form.date_field :fecha, class: 'form-control'%>
  </div>

  <div class="form-group">
    <%= form.label :baby_id %>
    <%= form.select :baby_id, options_for_select(@babies), {include_blank: true}, class: 'form-control'%>
  </div>

  <div class="actions">
    <%= form.submit 'Create Breastfeeding', class: 'btn btn-info'  %>
  </div>
<% end %>
