<p id="notice"><%= notice %></p>

<h1>Breastfeedings</h1>

<table class="table">
  <thead class="thead-dark">
    <tr>
      <th>Cantidad</th>
      <th>Duración</th>
      <th>Fecha</th>
      <th>Bebés</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @breastfeedings.each do |breastfeeding| %>
      <tr>
        <td><%= "#{breastfeeding.cantidad} gramos" %></td>
        <td><%= "#{breastfeeding.duracion} minutos" %></td>
        <td><%= breastfeeding.fecha.strftime("%d de %B %Y") %></td>
        <td><%= breastfeeding.baby.name %></td>
        <td><%= link_to 'Show', breastfeeding %></td>
        <td><%= link_to 'Edit', edit_breastfeeding_path(breastfeeding) %></td>
        <td><%= link_to 'Destroy', breastfeeding, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

